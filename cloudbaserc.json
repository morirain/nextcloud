{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "kodbox",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "cpu": 0.5,
          "mem": 1,
          "serviceName": "kodbox",
          "servicePath": "/",
          "uploadType": "image",
          "containerPort": 80,
          "imageInfo": {
            "imageUrl": "kodcloud/kodbox:v1.15"
          },
          "volumeMounts": {
            "/var/www/html": "kodbox-cfs"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CFS",
          "name": "kodbox-cfs"
        }
      ]
    }
  }
}
